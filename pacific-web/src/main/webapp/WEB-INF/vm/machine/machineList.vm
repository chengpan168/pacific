<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> 机器列表</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12" align="center">
                        <form class="form-inline" id="searchForm" onsubmit="return false;">
                            <div class="form-group">
                                <label for="userName">搜索关键字</label>
                                <input type="input" class="form-control" name="keyWords" id="keyWords" placeholder="应用名/ip/hostName">
                            </div>
                            <button type="button" id="searchButton" class="btn btn-default">查找</button>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <table id="table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>应用编码</th>
                                <th>应用名称</th>
                                <th>创建时间</th>
                                <th>clientIp</th>
                                <th>hostName</th>
                                <th>操作</th>
                            </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            #*<div class="text-right">
                <a href="#">查看详情 <i class="fa fa-arrow-circle-right"></i></a>
            </div>*#
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
<script type="text/javascript">
    $(document).ready(function () {
        table = dataTable({
            selector: '#table',
            url: '/machine/machineList.json',
            param : {'keyWords' : $('#keyWords').val()},
            columns: [
                {
                    orderable: false,
                    width: '15%',
                    data: 'applicationCode'
                },
                {
                    orderable: false,
                    width: '10%',
                    data: 'applicationName'
                },
                {
                    orderable: false,
                    width: '10%',
                    data: 'createTime'
                },
                {
                    orderable: false,
                    width: '10%',
                    data: 'ip'
                },
                {
                    orderable: false,
                    width: '10%',
                    data: 'hostName'
                },
                {
                    orderable: false,
                    width: '50',
                    render: function (data, type, row, meta) {
                        return "<button class='btn btn-primary'>编辑</button>";
                    }
                }
            ]
        });


        $('#table tbody').on('click', 'button', function () {
            var data = table.row($(this).parents('tr')).data();
            window.location.href = '/machine/toMachineEdit.htm?id=' + data.id;
        });


        $('#searchButton').click(function () {
            table.ajax.reload();
        });

    });

</script>
