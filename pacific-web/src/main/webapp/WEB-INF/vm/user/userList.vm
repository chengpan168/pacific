            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> 用户列表</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <table id="table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>id</th>
                                <th>用户名</th>
                                <th>手机</th>
                                <th>邮箱</th>
                                <th>状态</th>
                                <th>创建时间</th>
                                <th>角色类型</th>
                            </tr>
                            </thead>
