<script type="text/javascript">

    columns = [];
    $.get('url', function (data) {

    })

    $(document).ready(function () {

        table = dataTable({
            selector:'#table',
            url: '/user/userList.json?' + $('#searchForm').serialize(),
            columns: [
                {
                    data: 'id',
                },
                {
                    data: 'userName',
                },
                {
                    data: 'phone',
                },
                {
                    data: 'email',
                    sort: 'email',
                },
                {
                    data: 'stateText',
                    sort: 'stateText',
                },
                {
                    data: 'createTime',
                    sort: 'createTime',
                },
                {
                    data: 'roleTypeText',
                    sort: 'roleTypeText',
                }
            ]

        });

        $('#table tbody').on('click', 'button', function () {
            var data = table.row($(this).parents('tr')).data();
            window.location.href = '/user/edit.htm?id=' + data.id;
        });


        $('#searchButton').click(function () {
            table.ajax.reload();
        });

    });

</script>
