<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> 日志列表</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-8">
                        <form class="form-horizontal" id="searchForm" onsubmit="return false;">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="index" class="col-md-4 control-label">应用编号</label>
                                        <div class="col-md-8">
                                            <select class="form-control" id="index" name="index">
                                                #foreach($item in $applicationList)
                                                    <option value="$item.applicationCode">$item.applicationName</option>
                                                #end
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group ">
                                        <label for="level" class="col-md-4 control-label">日志级别</label>
                                        <div class="col-md-8">
                                            <select class="form-control" id="level" name="level">
                                                <option>all</option>
                                                <option>debug</option>
                                                <option>info</option>
                                                <option>error</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group ">
                                        <label for="message" class="col-md-4 control-label">日志消息</label>
                                        <div class="col-md-8">
                                            <input type="email" class="form-control" name="message" id="message" placeholder="应用编码">
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group ">
                                        <div class="col-md-4 text-right">
                                            <button type="submit" id="searchButton" class="btn btn-primary">查找</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <table id="table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>应用编码</th>
                                <th>产生时间</th>
                                <th>级别</th>
                                <th>message</th>
                                <th>堆栈</th>
                                <th>机器</th>
                                <th>文件</th>
                                <th>线程</th>
                                <th>操作</th>
                            </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- /.row -->
<script type="text/javascript">
    $(document).ready(function () {

        table = $('#table').DataTable({
            language: Common.language,
            serverSide: true,
            searching: false,
            lengthChange: false,
            autoWidth: false,
            ajax: function (data, callback, settings) {
                var orderLength = data.order.length;
                var sortProperty = orderLength == 0 ? '' : settings.aoColumns[data.order[0].column].sort || data.columns[data.order[0].column].data;
                var sortDirection = orderLength == 0 ? '' : data.order[0].dir;
                $.ajax({
                    type: "post",
                    url: '/log/list.json?' + $('#searchForm').serialize(),
                    dataType: "json",
                    data: {
                        'pageSize': data.length,
                        'currentPage': data.start / data.length + 1,
                        'property': sortProperty,
                        'direction': sortDirection,
                    },
                    success: function result(res) {
                        var data = res.data;
                        callback({
                            recordsTotal: data.totalCount,
                            recordsFiltered: data.totalCount,
                            data: data.data
                        });
                    },
                    error: function () {
                        console.log('请求失败')
                    }
                })
            },

            columnDefs: [
                {
                    defaultContent: '',
                    targets: '_all'
                }],
            order: [],
            columns: [
                {
                    width: '10%',
                    data: 'index'
                },
                {
                    render: Common.dateFormatter,
                    width: '10%',
                    data: 'timestamp',
                    sort: 'timestamp'
                },
                {
                    orderable: false,
                    width: '5%',
                    data: 'level'
                },
                {
                    orderable: false,
                    width: '20%',
                    data: 'message',
                    render: Common.cellMore

                },
                {
                    orderable: false,
                    width: '20%',
                    data: 'stackTrace'
                },
                {
                    orderable: false,
                    width: '8%',
                    data: 'host'
                },
                {
                    orderable: false,
                    width: '8%',
                    data: 'path'
                },
                {
                    orderable: false,
                    width: '8%',
                    data: 'threadName'
                },
                {
                    orderable: false,
                    width: '8%',
                    render: function () {
                        return "<button class='btn btn-primary'>查看</button>";
                    }
                }
            ]
        });


        /*$('#table tbody').on('click', 'button', function () {
            var data = table.row($(this).parents('tr')).data();
            console.log(data);
            alert(data.id + " 的应用名:" + data.applicationName);
        });*/


        $('#searchButton').click(function () {
            table.ajax.reload();
        });

    });

</script>
